<!DOCTYPE web-app PUBLIC
		"-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
		"http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>ABC Bank</display-name>
	
	<servlet>
		<servlet-name>login</servlet-name>
		<jsp-file>/view/login_pages/netbanking_login.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>netbanking_bad_credentials</servlet-name>
		<jsp-file>/view/login_pages/wrong_login_credentials.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>netbanking_bad_credentials</servlet-name>
		<url-pattern>/wrong-login-credentials</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>"email otp"</servlet-name>
		<servlet-class>controller.SendEmailOTP</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>"email otp"</servlet-name>
		<url-pattern>/otp-email</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>"mobile otp"</servlet-name>
		<servlet-class>controller.SendMobileOTP</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>"mobile otp"</servlet-name>
		<url-pattern>/otp-mobile</url-pattern>
	</servlet-mapping>
	
	<filter>
		<filter-name>CorsFilter</filter-name>
		<filter-class>controller.CORSFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>CorsFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<filter>
		<filter-name>CorsFilter1</filter-name>
		<filter-class>org.apache.catalina.filters.CorsFilter</filter-class>
		<init-param>
			<param-name>cors.allowed.origins</param-name>
			<param-value>*</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>CorsFilter1</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>
